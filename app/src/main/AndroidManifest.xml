<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.linc.androidsensor" >

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.sensor.OrientationActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.sensor.AccelerometerActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".activity.sensor.GyroscopeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.DeviceSensorInfoActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.sensor.LightActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".activity.sensor.MagneticFleldActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.sensor.ProximityActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.sensor.StepActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>
